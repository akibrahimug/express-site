extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        //- Use interpolation to dynamically add the project title
        h1 #{projects[id].project_name}

        //- Use interpolation to dynamically add the project description
        p #{projects[id].description}

      .project-tech-links-box.box
        h6 Technologies
        ul
        each tech in projects[id].technologies
          //- Use an `each` iterator and interpolation to dynamically replace the li tags below with the technologies listed for this project
          li= tech

        //- Add the href values to the links below
        a.btn-link(href=`${projects[id].live_link}`, target="_blank") Live Demo
        a.btn-link(href=`${projects[id].github_links}`, target="_blank") GitHub Repo

    .project-img-box.box

      //- Replace the URLs in the src attributes below with interpolated template literals to dynamically add your project images, and add descriptions to the alt attributes
      img.project-img(src=`${projects[id].image_urls[1]}`, alt=`Picture of ${projects[id].project_name}`)
      img.project-img(src=`${projects[id].image_urls[2]}`, alt=`Picture of ${projects[id].project_name}`)
      img.project-img(src=`${projects[id].image_urls[3]}`, alt=`Picture of ${projects[id].project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
